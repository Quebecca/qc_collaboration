{
    "name": "qc/collaboration",
    "description": "Standardisation des contributions au code source du projet PGU",
    "license": [
        "GPL-2.0-or-later"
    ],
    "require": {
        "typo3/cms-core": "^11.5 || ^12",
    	"ssch/typo3-rector": "@dev",
		"typo3/coding-standards": "@dev",
		"helmich/typo3-typoscript-lint": "@dev",
		"ergebnis/composer-normalize": "@dev",
		"phpstan/phpstan": "@dev",
		"phpstan/extension-installer": "@dev",
		"phpstan/phpstan-phpunit": "@dev",
		"saschaegerer/phpstan-typo3": "@dev",
		"phpspec/prophecy-phpunit": "@dev",
		"squizlabs/php_codesniffer": "@dev",
		"phpunit/phpunit": "@dev"
	},
    "autoload": {
    },
	"scripts": {
		"ci:php:lint": "find *.php *.php extensions/* -name '*.php' -print0 | xargs -r -0 -n 1 -P 4 php -l",
		"ci:php:stan": "phpstan --no-progress --configuration=build/phpstan.neon",
		"ci:composer:normalize": "@composer normalize --dry-run",
		"ci:ts:lint": "typoscript-lint -c build/TsLint.yml --ansi -n --fail-on-warnings -vvv extensions/**/Configuration/TypoScript"
	},
	"scripts-descriptions": {
		"ci:php:lint": "",
		"ci:php:stan": "",
		"ci:composer:normalize": "",
		"ci:ts:lint": ""

	},
    "version": "1.0.0"
}
